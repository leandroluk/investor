{
  "version": "0.2.0",
  "configurations": [
    // apps/api
    {
      "name": "api",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/api",
      "program": "${workspaceFolder}/apps/api/node_modules/@nestjs/cli/bin/nest.js",
      "args": [
        "start",
        "--debug",
        "--watch"
      ],
      "sourceMaps": true,
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_OPTIONS": "--trace-warnings"
      }
    },
    // apps/doc
    {
      "name": "doc",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}/apps/doc",
      "runtimeExecutable": "pnpm",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "dev"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    // apps/web (server-side)
    {
      "name": "web:server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/web",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "dev"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    // apps/web (client-side, React)
    {
      "name": "web:chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1.nip.io:3000",
      "webRoot": "${workspaceFolder}/apps/web",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**",
        "${workspaceFolder}/.next/**",
        "**/next/dist/**",
        "**/next/**",
        "**/*.min.js"
      ]
    },
  ],
}