{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.html",
        "watchAssets": true
      },
      {
        "include": "**/*.text",
        "watchAssets": true
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger"
      }
    ]
  }
}