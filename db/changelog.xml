<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
  <changeSet id="create-extensions" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE EXTENSION IF NOT EXISTS "pg_trgm"; 
      CREATE EXTENSION IF NOT EXISTS "fuzzystrmatch";
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP EXTENSION IF EXISTS "pg_trgm";
      DROP EXTENSION IF EXISTS "fuzzystrmatch";
    ]]></sql></rollback>
  </changeSet>
  
  <includeAll path="./v1" relativeToChangelogFile="true" />
  
  <changeSet id="tag-v1" author="leandroluk@gmail.com">
    <tagDatabase tag="v1" />
  </changeSet>

</databaseChangeLog>