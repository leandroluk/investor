<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
  <changeSet id="create-table-user" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "user" (
        "id"                 UUID           NOT NULL,
        "email"              VARCHAR(100)   NOT NULL,
        "wallet_address"     CHAR(42)       NOT NULL,
        "password_hash"      TEXT           NOT NULL,
        "name"               VARCHAR(100)   NOT NULL,
        "wallet_verified_at" TIMESTAMPTZ(3)     NULL,
        "status"             VARCHAR(20)    NOT NULL,
        "two_factor_enabled" BOOLEAN        NOT NULL,
        "created_at"         TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        ---
        PRIMARY KEY ("id"),
        UNIQUE      ("email"),
        UNIQUE      ("wallet_address")
      );
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "user";
    ]]></sql></rollback>
  </changeSet>

  <changeSet id="tag" author="leandroluk@gmail.com">
    <tagDatabase tag="001" />
  </changeSet>
</databaseChangeLog>
