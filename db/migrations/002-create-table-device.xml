<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
  <changeSet id="create-table-device" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "device" (
        "id"          UUID           NOT NULL,
        "user_id"     UUID           NOT NULL,
        "platform"    VARCHAR(20)    NOT NULL,
        "fingerprint" VARCHAR(255)   NOT NULL,
        "is_active"   BOOLEAN        NOT NULL,
        "brand"       VARCHAR(50)        NULL,
        "name"        VARCHAR(50)        NULL,
        "model"       VARCHAR(50)        NULL,
        "created_at"  TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "updated_at"  TIMESTAMPTZ(3)     NULL,
        ---
        PRIMARY KEY ("id"),
        FOREIGN KEY ("user_id") REFERENCES "user" ("id") ON DELETE CASCADE
      );
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "device";
    ]]></sql></rollback>
  </changeSet>

  <changeSet id="tag" author="leandroluk@gmail.com">
    <tagDatabase tag="002" />
  </changeSet>
</databaseChangeLog>
