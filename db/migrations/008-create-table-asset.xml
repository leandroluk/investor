  <changeSet id="create-table-asset" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "asset" (
        "id"         VARCHAR(50)    NOT NULL,
        "symbol"     VARCHAR(10)    NOT NULL,
        "network"    VARCHAR(50)    NOT NULL,
        "is_active"  BOOLEAN        NOT NULL,
        "created_at" TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        ---
        PRIMARY KEY ("id")
      );
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "asset";
    ]]></sql></rollback>
  </changeSet>

  <changeSet id="tag" author="leandroluk@gmail.com">
    <tagDatabase tag="008" />
  </changeSet>
</databaseChangeLog>
