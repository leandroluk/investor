<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
  <changeSet id="create-table-strategy" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "strategy" (
        "id"                      UUID           NOT NULL,
        "alias"                   VARCHAR(50)    NOT NULL,
        "description"             TEXT           NOT NULL,
        "expected_apy_range_low"  DECIMAL        NOT NULL,
        "expected_apy_range_high" DECIMAL        NOT NULL,
        "created_at"              TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "updated_at"              TIMESTAMPTZ(3)     NULL,
        ---
        PRIMARY KEY ("id"),
        UNIQUE      ("alias")
      );
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "strategy";
    ]]></sql></rollback>
  </changeSet>

  <changeSet id="tag" author="leandroluk@gmail.com">
    <tagDatabase tag="009" />
  </changeSet>
</databaseChangeLog>
