<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
  <changeSet id="create-table-strategy" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "tb_strategy" (
        "id"            UUID           NOT NULL,
        "created_at"    TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "updated_at"    TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "name"          VARCHAR(100)   NOT NULL,
        "description"   TEXT               NULL,
        "apy"           DECIMAL(5, 4)  NOT NULL,
        "risk_level"    VARCHAR(20)    NOT NULL,
        "asset_id"      UUID           NOT NULL,
        ---
        PRIMARY KEY ("id"),
        FOREIGN KEY ("asset_id") REFERENCES "tb_asset"("id") ON DELETE CASCADE
      );
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "tb_strategy";
    ]]></sql></rollback>
  </changeSet>

  <changeSet id="tag" author="leandroluk@gmail.com">
    <tagDatabase tag="009" />
  </changeSet>
</databaseChangeLog>
