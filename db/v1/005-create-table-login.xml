<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
  <changeSet id="create-table-login" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "tb_login" (
        "id"             UUID           NOT NULL,
        "created_at"     TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "user_id"        UUID           NOT NULL,
        "device_id"      UUID               NULL,
        "ip"             VARCHAR(45)    NOT NULL,
        "strategy"       VARCHAR(50)    NOT NULL,
        "success"        BOOLEAN        NOT NULL,
        "failure_reason" TEXT               NULL,
        ---
        PRIMARY KEY ("id"),
        FOREIGN KEY ("user_id") REFERENCES "tb_user"("id") ON DELETE CASCADE,
        FOREIGN KEY ("device_id") REFERENCES "tb_device"("id") ON DELETE SET NULL
      );
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "tb_login";
    ]]></sql></rollback>
  </changeSet>
</databaseChangeLog>
