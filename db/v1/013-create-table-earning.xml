<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
  <changeSet id="create-table-earning" author="leandroluk@gmail.com">
    <sql splitStatements="false" endDelimiter=";"><![CDATA[
      CREATE TABLE "tb_earning" (
        "id"            UUID           NOT NULL,
        "created_at"    TIMESTAMPTZ(3) NOT NULL DEFAULT NOW(),
        "investment_id" UUID           NOT NULL,
        "amount_token"  DECIMAL(19, 4) NOT NULL,
        "amount_usd"    DECIMAL(19, 4) NOT NULL,
        ---
        PRIMARY KEY ("id"),
        FOREIGN KEY ("investment_id") REFERENCES "tb_investment"("id") ON DELETE CASCADE
      );
    ]]></sql>

    <rollback><sql splitStatements="false" endDelimiter=";"><![CDATA[
      DROP TABLE "tb_earning";
    ]]></sql></rollback>
  </changeSet>
</databaseChangeLog>
