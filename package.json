{
  "name": "investor",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "clear": "pnpm dlx rimraf --glob \"**/{.turbo,.next,.coverage,dist,node_modules,pnpm-lock.yaml}\"",
    "watch": "dev-watch \"./apps/src/**/*.{ts,tsx,json,css}\" \"./libs/**/src/**/*.{ts,tsx,json,css}\"",
    "docker:down": "docker compose down --remove-orphans",
    "docker:up": "docker compose up --build",
    "docker": "pnpm docker:down && pnpm docker:up",
    "docker:d": "npm run docker -- -d",
    "k3d:build": "dev-k3d-build",
    "k3d:apply": "terraform -chdir=infra/local apply -auto-approve",
    "k3d:plan": "terraform -chdir=infra/local plan",
    "k3d:destroy": "terraform -chdir=infra/local destroy -auto-approve",
    "readme:deps": "dev-gen-deps-graph"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@libs/config-eslint": "workspace:*",
    "@libs/config-typescript": "workspace:*",
    "@tools/dev": "workspace:*",
    "@types/node": "25.0.10",
    "eslint": "9.39.2",
    "lefthook": "2.0.15",
    "turbo": "2.7.6"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20"
  }
}